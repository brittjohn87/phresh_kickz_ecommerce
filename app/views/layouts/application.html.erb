<!DOCTYPE html>
<html>
  <head>
    <title>PersonalEcommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- Nav bar -->
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- Insert Company Image Here -->
      <%= link_to "Home", root_path, class: "navbar-brand" %>
    </div>
      <!-- End -->
    <!-- Collect the nav links -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Brand <span class="sr-only">(current)</span></a></li>
        <li><a href="#">Size</a></li>
        <li><a href="#">Category</a></li>
      </ul>
    <!-- End -->
    <!-- Right Hand Side links and dropdown -->
    <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Signed In As: <%= current_user.email %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Edit Profile</a></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Inventory", backroom_path %></li>
              <li><a href="#">All Users</a></li>
            </ul>
          </li>
      </ul>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%=link_to "Sign In", new_user_session_path %></li>
      </ul>
    <% end %>
      

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<!-- end -->





  



  <div class="container">
    <%= yield %>
  </div>
  







  </body>
</html>
