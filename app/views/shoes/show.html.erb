<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @shoe.image.url, class: "img-rounded" %>
</p>


<p>
  <strong>Name:</strong>
  <%= @shoe.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @shoe.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @shoe.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @shoe.brand %>
</p>

<p>
  <strong>Category:</strong>
  <%= @shoe.category_id %>
</p>

<%= form_with(model: size, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :size %>
    <%= form.number_field :size, id: :size_size, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.lable :quantity %>
    <%= form.number_field :quantity, id: :size_quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :shoe_id, id: :size_shoe_id, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'Edit', edit_shoe_path(@shoe) %> |
<%= link_to 'Back', shoes_path %>
