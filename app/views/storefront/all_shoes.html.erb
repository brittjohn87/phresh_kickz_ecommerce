<center><div class="row">
  <% @shoes.each do |shoe| %>
    <div class="col-md-4">
        <% if shoe.image.url.nil? == false %>
          <div class="nocolor">
          <a href="#" data-toggle="modal" data-target="#myModal_<%= shoe.id %>"><%= image_tag shoe.image.url, class: "storefront-pics" %></a>
          </div>
        <% end %>
      <% if shoe.quantity == 0 %>
        <h4 class="sold_out">Currently Sold Out!</h4>
      <% elsif %>
        <h4><%= shoe.name %></h4>
      <% end %>
    </div>
    <!-- Entered Modal Here -->
    <div class="modal fade" id="myModal_<%= shoe.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
      </div>
      <div class="modal-body">
        <% if shoe.image.url.nil? == false %>
          <p><%= image_tag shoe.image.url, class: "storefront-pics" %></p>
        <% end %>
        <h4><%= shoe.name %></h4>
      <% if shoe.quantity == 0 %>
        <h4 class="sold_out">Sold Out!</h4>
      <% elsif %> 
        <h4>Size: <%= shoe.size %></h4>
        <h4>Price: <%= number_to_currency shoe.price %></h4>
      
        <h4>Questions?</h4>
        <h4>Contact Seller @ <%= mail_to shoe.user.email %></h4>
      </div>
      <div class="modal-footer">
        
      <% if user_signed_in? %> 
        <center><p id="modalfoot">Cop today before it's too late!</p>
          <!-- Add To Cart Function -->
        <p>
          <%= form_tag add_to_cart_path do %>
            <%= hidden_field_tag :shoe_id, shoe.id %>
            <%= number_field_tag :quantity, nil, min: 1, max: shoe.quantity %>
            <%= submit_tag "Add to Cart", class: "btn btn-success" %>
          <% end %>
        </p>
      
      <% else %>
        <center><p id="modalfoot">What are you waiting for?</p>
          <p>Must be a member to purchase, so sign up today!</p></center> 
      <% end %>
      <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
    <!-- End of Modal -->
  <% end %>
</div>
</center>


